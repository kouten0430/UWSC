uwscID = GETID(GET_THISUWSC_WIN)
CTRLWIN( uwscID,　HIDE )

ExplorerID = GETID(GET_ACTIVE_WIN)

位置=INPUT("位置を入力")

IFB 位置 > GETSLIDER(ExplorerID) THEN
	WHILE 位置 > GETSLIDER(ExplorerID)
		BTN(WHEEL, -1, 189,113)
	WEND
ELSEIF 位置 < GETSLIDER(ExplorerID) THEN
	WHILE 位置 < GETSLIDER(ExplorerID)
		BTN(WHEEL, 1, 189,113)
	WEND
ENDIF